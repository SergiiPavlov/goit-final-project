# Server
PORT=4000
NODE_ENV=development

# Database (PostgreSQL)
# Example (local): postgresql://postgres:postgres@localhost:5432/lehlehka?schema=public
DATABASE_URL=

# CORS allowlist. Comma-separated list. Example:
# CORS_ORIGINS=http://localhost:3000,https://your-frontend.example
CORS_ORIGINS=http://localhost:3000

# Auth (PR-04)
# Generate strong secrets (min 16 chars). Example: openssl rand -hex 32
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Password hashing
BCRYPT_SALT_ROUNDS=10


# Cloudinary (optional) - avatar uploads like in HW
# If not set, server will fallback to local uploads in development.
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
# Folder in your Cloudinary account for avatars
CLOUDINARY_FOLDER=avatars

# Default avatar URL (public). Used when user didn't upload an avatar yet.
# Recommend to upload a small image to your Cloudinary and paste its URL here.
DEFAULT_AVATAR_URL=
