// PR-02: Database schema (PostgreSQL)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  boy
  girl
}

model User {
  id           String    @id @default(uuid())
  name         String    @db.VarChar(32)
  email        String    @unique @db.VarChar(64)
  passwordHash String    @map("password_hash")
  gender       Gender?
  dueDate      DateTime? @db.Date @map("due_date")
  avatarUrl    String?   @map("avatar_url")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  sessions     Session[]
  tasks        Task[]
  diaryEntries DiaryEntry[]

  @@map("users")
}

model Session {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  refreshTokenHash String   @map("refresh_token_hash")
  expiresAt        DateTime @map("expires_at")
  createdAt        DateTime @default(now()) @map("created_at")

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@unique([refreshTokenHash])
  @@map("sessions")
}

model Task {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String   @db.VarChar(96)
  date      DateTime @db.Date
  isDone    Boolean  @default(false) @map("is_done")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@map("tasks")
}

model DiaryEntry {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  title       String   @db.VarChar(64)
  description String   @db.VarChar(1000)
  date        DateTime @db.Date @default(dbgenerated("CURRENT_DATE"))
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  emotions    DiaryEntryEmotion[]

  @@index([userId, date])
  @@map("diary_entries")
}

model Emotion {
  id    String @id
  title String @db.VarChar(64)

  diaryEntries DiaryEntryEmotion[]

  @@map("emotions")
}

model DiaryEntryEmotion {
  diaryEntryId String @map("diary_entry_id")
  emotionId    String @map("emotion_id")

  diaryEntry   DiaryEntry @relation(fields: [diaryEntryId], references: [id], onDelete: Cascade)
  emotion      Emotion    @relation(fields: [emotionId], references: [id], onDelete: Cascade)

  @@id([diaryEntryId, emotionId])
  @@index([emotionId])
  @@map("diary_entry_emotions")
}

model WeekBabyState {
  weekNumber      Int      @id @map("week_number")
  analogy         String?
  babySize        Int      @map("baby_size")
  babyWeight      Int      @map("baby_weight")
  image           String
  babyActivity    String   @db.Text @map("baby_activity")
  babyDevelopment String   @db.Text @map("baby_development")
  interestingFact String   @db.Text @map("interesting_fact")
  momDailyTips    String[] @map("mom_daily_tips")

  @@map("week_baby_states")
}

model WeekMomState {
  weekNumber    Int      @id @map("week_number")
  feelingsStates String[] @map("feelings_states")
  sensationDescr String   @db.Text @map("sensation_descr")
  comfortTips    Json     @map("comfort_tips")

  @@map("week_mom_states")
}
